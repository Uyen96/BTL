<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_100"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/dp_8">
    <TextView
        android:id="@+id/text_item_id"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_100"
        android:layout_weight="1"
        android:hint="@string/id"
        android:textSize="@dimen/sp_20"
        android:textColor="@color/color_primary_dark"
        android:gravity="center"
        android:background="@color/color_range_100"
        />
    <LinearLayout
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_100"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_8"
        android:paddingLeft="@dimen/dp_8">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/name"
            android:textColor="@color/color_black"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/price"
            android:textColor="@color/color_black"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/effect"
            android:textColor="@color/color_black"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/type"
            android:textColor="@color/color_black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_100"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_8">

        <TextView
            android:id="@+id/text_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/name"
            android:textColor="@color/color_black"/>
        <TextView
            android:id="@+id/text_item_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/price"
            android:textColor="@color/color_black"/>
        <TextView
            android:id="@+id/text_item_effect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/effect"
            android:textColor="@color/color_black"/>
        <TextView
            android:id="@+id/text_item_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/type"
            android:textColor="@color/color_black"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/image_edit_cos"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:src="@drawable/icon_edit"/>
    <ImageView
        android:id="@+id/image_del_cos"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:src="@drawable/icon_delete"/>
</LinearLayout>